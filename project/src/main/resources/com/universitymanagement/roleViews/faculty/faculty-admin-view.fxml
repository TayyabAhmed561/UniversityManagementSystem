<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.universitymanagement.controller.FacultyController.FacultyAdminFeatures"
      prefWidth="1000" prefHeight="700"
      spacing="30" style="-fx-padding: 40; -fx-alignment: center;">

    <Label text="Faculty Management (Admin)"
           style="-fx-font-size: 32px; -fx-font-weight: bold;" />

    <GridPane hgap="20" vgap="20" style="-fx-alignment: center;">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 18px;" />

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 18px;" />

        <Label text="Degree:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="degreeField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 18px;" />

        <Label text="Research Interest:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="researchField" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 18px;" />

        <Label text="Office Location:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="officeField" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-font-size: 18px;" />
    </GridPane>

    <HBox spacing="20" style="-fx-alignment: center;">
        <Button text="Add" onAction="#handleAddFaculty"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 20px;" />
        <Button text="Edit" onAction="#handleEditFaculty"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 20px;" />
        <Button text="Delete" onAction="#handleDeleteFaculty"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 20px;" />
        <Button text="Back" onAction="#handleBackAction"
                style="-fx-background-color: #f0f0f0; -fx-text-fill: #333333; -fx-font-size: 20px;" />
    </HBox>

    <TableView fx:id="facultyTable" style="-fx-border-color: lightgrey; -fx-font-size: 18px;">
        <columns>
            <TableColumn text="Name" fx:id="nameColumn" prefWidth="250" />
            <TableColumn text="Email" fx:id="emailColumn" prefWidth="250" />
        </columns>
    </TableView>
</VBox>
