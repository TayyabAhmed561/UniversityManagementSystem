<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.universitymanagement.controller.AdminController.AdminDashboardController"
      style="-fx-padding: 20; -fx-alignment: center; -fx-spacing: 15;">

    <Label text="Admin Dashboard"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Button text="Manage Users"
            onAction="#manageUsers"
            style="-fx-background-color: #4682B4; -fx-text-fill: white;" />

    <Button text="View Reports"
            onAction="#viewReports"
            style="-fx-background-color: #4682B4; -fx-text-fill: white;" />

    <Button text="Manage Subjects"
            onAction="#handleManageSubjects"
            style="-fx-background-color: #4682B4; -fx-text-fill: white;" />

    <Button text="View Subjects"
            onAction="#handleViewSubjects"
            style="-fx-background-color: #32CD32; -fx-text-fill: white;" />

    <Button text="Logout"
            onAction="#handleLogoutAction"
            style="-fx-background-color: #B22222; -fx-text-fill: white;" />

    <Button text="Add Subject"
            onAction="#handleAddSubject"
            style="-fx-background-color: #32CD32; -fx-text-fill: white;" />

    <Button text="Edit Subject"
            onAction="#handleEditSubject"
            style="-fx-background-color: #FFA500; -fx-text-fill: white;" />

    <Button text="Back to Dashboard"
            onAction="#handleBackAction"
            style="-fx-background-color: #4682B4; -fx-text-fill: white;" />



</VBox>
