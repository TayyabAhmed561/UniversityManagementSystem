<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.universitymanagement.controller.AdminController.AdminDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-alignment: center;">
            <Label text="Admin Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px;" />
        </HBox>
    </top>

    <!-- Left sidebar with toggle mechanism -->
    <left>
        <HBox>
            <!-- Hamburger menu button that's always visible -->
            <VBox alignment="TOP_CENTER" style="-fx-background-color: transparent; -fx-padding: 10;">
                <Button fx:id="menuToggleButton" text="â˜°"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 20px;"
                        onAction="#toggleMenu"/>
            </VBox>

            <!-- Collapsible sidebar - starts with width 0 -->
            <VBox fx:id="sidebarMenu" prefWidth="0" maxWidth="250"
                  style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-opacity: 0;">

                <Label text="University Management"
                       style="-fx-text-fill: #333; -fx-font-size: 16px; -fx-padding: 10 0 10 0;" />

                <VBox spacing="5">
                    <Button text="Dashboard" onAction="#loadDashboard"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Subject Management" onAction="#handleManageSubjects"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Course Management" onAction="#handleManageCourses"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Student Management" onAction="#handleManageStudents"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Faculty Management" onAction="#handleManageFaculty"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Event Management" onAction="#handleManageEvents"
                            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                    <Button text="Logout" onAction="#handleLogoutAction"
                            style="-fx-background-color: #B22222; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 230;" />
                </VBox>
            </VBox>
        </HBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" />
    </center>

</BorderPane>