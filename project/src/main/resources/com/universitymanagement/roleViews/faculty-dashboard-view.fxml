<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.universitymanagement.controller.FacultyController.FacultyDashboardController"
      prefWidth="1000" prefHeight="700"
      style="-fx-padding: 40; -fx-alignment: center; -fx-spacing: 30;">

    <Label text="Faculty Dashboard" style="-fx-font-size: 32px; -fx-font-weight: bold;" />

    <Button text="View Student Information"
            onAction="#handleViewStudentInformation"
            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 350px;" />

    <Button text="Manage My Courses"
            onAction="#handleManageCourses"
            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 350px;" />

    <Button text="View Events"
            onAction="#handleViewEvents"
            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 350px;" />

    <Button text="Logout"
            onAction="#handleLogoutAction"
            style="-fx-background-color: #B22222; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 350px;" />
</VBox>
