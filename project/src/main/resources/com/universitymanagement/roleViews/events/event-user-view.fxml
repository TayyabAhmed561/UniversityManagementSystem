<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.universitymanagement.controller.EventController.EventStudentFeatures"
      prefWidth="1000" prefHeight="700"
      spacing="30" style="-fx-padding: 40; -fx-alignment: center;">

    <Label text="View and Register for Events"
           style="-fx-font-size: 32px; -fx-font-weight: bold;" />

    <ListView fx:id="eventsListView" prefHeight="300" prefWidth="600" />

    <GridPane hgap="20" vgap="20" style="-fx-alignment: center;">
        <Label text="Your Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="studentNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="20" style="-fx-alignment: center;">
        <Button text="Display Events" onAction="#displayEvents"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 20px;" />
        <Button text="Register" onAction="#registerForEvent"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 20px;" />
        <Button text="Back" onAction="#handleBackAction"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 20px;" />
    </HBox>

</VBox>
