<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.universitymanagement.controller.dashboardController"
            style="-fx-background-color: linear-gradient(to bottom, #B22222, #FFD100);">

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">

            <!-- Collapsible Toggle Button -->
            <ToggleButton fx:id="menuToggle" text="â˜°" onAction="#toggleMenu"
                          style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px;" />

            <!-- Navigation Buttons -->
            <VBox fx:id="menuItems" spacing="5" style="-fx-padding: 5;">

                <Button text="Dashboard" onAction="#loadDashboard"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
                <Button text="Course Management" onAction="#loadCourseManagement"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
                <Button text="Subject Management" onAction="#loadSubjectManagement"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
                <Button text="Student Management" onAction="#loadStudentManagement"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
                <Button text="Faculty Management" onAction="#loadFacultyManagement"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
                <Button text="Event Management" onAction="#loadEventManagement"
                        style="-fx-background-color: #444; -fx-text-fill: white; -fx-padding: 10;" />
            </VBox>
        </VBox>
    </left>

    <!-- Central Content Pane -->
    <center>
        <StackPane fx:id="contentPane"/>
    </center>

</BorderPane>
